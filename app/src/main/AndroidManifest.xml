<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.alarmmanager" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/apppic"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetAlarmScreen"
            android:label="@string/title_activity_set_alarm_screen" >
        </activity>

        <receiver android:name=".AlarmReceiver" />

        <activity
            android:name=".Calculation"
            android:label="@string/title_activity_calculation" >
        </activity>
        <activity
            android:name=".GoToNews"
            android:label="@string/title_activity_go_to_news" >
        </activity>
        <activity
            android:name=".ListView"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name=".List"
            android:label="@string/title_activity_list" >
        </activity>
    </application>

</manifest>
